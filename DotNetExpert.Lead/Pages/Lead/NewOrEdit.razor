@page "/Leads/New"
@page "/Leads/Edit/{Id:int}"
@attribute [Authorize]
@inherits DotNetExpert.Lead.Pages.Lead.NewEditModel
@inject DotNetExpert.Lead.ViewModel.Leads.LeadService leadService
<div class="widget-header">
    <div class="row">
        <div class="col-md-4"><a href="/Leads/Index"><i class="fa fa-arrow-circle-o-left" style="font-size:24px; color:blue"></i></a></div>
        <div class="col-md-4"> 
             <h4 class="text-dark">@Title Lead</h4>
        </div>
        <div class="col-md-4" align="right">
            <EditForm Model="@viewModel" OnValidSubmit="Save">
                <input type="submit" style="width:9rem;" class="btn btn-primary btn-sm text-white mt-3" value="Save"> &nbsp;
                <button type="button" style="width:9rem;" class="btn btn-light text-dark btn-sm mt-3" @onclick="(() => Redirect(DotNetExpert.Lead.Library.Models.Common.Entity.Leads.ToString()))">Cancel</button>
            </EditForm>
        </div>
    </div>
    <hr />
</div>

<div class="widget-content widget-content-area">
    <EditForm Model="@viewModel" OnValidSubmit="Save">
        <DataAnnotationsValidator />
        <div class="form-group row mb-4">
            <div class="col-sm-10">
                <div class="form-group row">
                    <div class="col-1">
                        <label class="text-secondary">First Name</label>
                    </div>
                    <div class="col-4">
                        <input type="text" style="background-color: #FAE900;" class="form-control mt-2" @bind="@viewModel.FirstName" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label class="text-secondary">Last Name</label>
                    </div>
                    <div class="col-4">
                        <input type="text" style="background-color: #FAE900;" class="form-control mt-2" @bind="@viewModel.LastName" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label class="text-secondary">Email</label>
                    </div>
                    <div class="col-4">
                        <input type="text" style="background-color: #FAE900;" class="form-control mt-2" @bind="@viewModel.Email" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label class="text-secondary">Phone</label>
                    </div>
                    <div class="col-4">
                        <input type="text" style="background-color: #FAE900;" class="form-control mt-2" @bind="@viewModel.Phone" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label class="text-secondary">Category</label>
                    </div>
                    <div class="col-4">
                        <select class="form-select mt-2" style="background-color: #FAE900;"  @bind="@viewModel.CategoryId"> @foreach(var items in leadService.RenderCategories()) { <option value="@items.Id">@items.Name</option> } </select>
                    </div>
                </div>
            </div>
        </div> 
    </EditForm>
<hr />
</div>


